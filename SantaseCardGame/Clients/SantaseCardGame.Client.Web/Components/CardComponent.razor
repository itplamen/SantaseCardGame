<img id="@Card.Name"
     alt="@Card.Name"
     src="/images/cards/@string.Concat(Card.Name,".png")"
     class="card-component @(PlayerActionType == PlayerActionType.ChangeTrump ? "trump-card" : string.Empty)" 
     @onclick="@(() => OnClick.InvokeAsync(new PlayerAction(PlayerActionType, Card)))" />

@code {
    [Parameter]
    public Card Card { get; set; }

    [Parameter]
    public PlayerActionType PlayerActionType { get; set; }

    [Parameter]
    public EventCallback<PlayerAction> OnClick { get; set; }
}